@page
@model BlogON.Presentation.Areas.Admin.Pages.Article.IndexModel
@{

    Layout = "_AdminLayout";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست مطالب</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel panel-default">
    <div class="panel-heading pull-right">
        لیست  مطالب
    </div>
    <div class="panel-heading pull-left">
        <a href="/Admin/Article/Create/" class="btn btn-success">افزودن مطلب جدید</a>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>

                        <th>عنوان</th>
                        <th>دسنه</th>
                        <th>وضغیت</th>
                        <th>تاریخ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.articleViewModel)
                    {

                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Category</td>
                            <td>
                                @if (item.IsDelete)
                                {
                                    <i class="fa fa-times fa-2x  text-danger"></i>

                                }
                                else
                                {
                                    <i class="fa fa-check fa-2x text-success"></i>

                                }
                            </td>
                            <td>@item.CreationDate</td>
                            <td>
                                <a href="/Admin/Article/Edit/@item.Id" class="btn btn-sm btn-warning pull-right"><i class="fa fa-edit"></i></a>
                                @if (item.IsDelete)
                                {
                                    <form method="post" asp-page-handler="Active" class="pull-left">
                                        <input type="hidden" name="id" asp-for="@item.Id" />
                                        <button class="btn btn-success">فعال</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Remove" class="pull-left">
                                        <input type="hidden" name="id" asp-for="@item.Id" />
                                        <button class="btn btn-danger">حذف</button>
                                    </form>
                                }
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>

